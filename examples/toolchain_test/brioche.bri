import * as brioche from "brioche";

export default async (): Promise<brioche.Lazy> => {
  return brioche.process({
    command: brioche.processTemplate("/usr/bin/env"),
    args: [
      brioche.processTemplate("sh"),
      brioche.processTemplate("-c"),
      brioche.processTemplate(`
        set -euo pipefail

        echo "#include <stdio.h>" >> test.c
        echo "int main() { printf(\\"Hello world!\\n\\"); }" >> test.c
        mkdir -p "$BRIOCHE_OUTPUT/bin"
        gcc \
          -o "$BRIOCHE_OUTPUT/bin/test" \
          test.c
        "$BRIOCHE_OUTPUT/bin/test" >> "$BRIOCHE_OUTPUT/test.txt"

        echo "$test_script" > "$BRIOCHE_OUTPUT/test.sh"
        chmod +x "$BRIOCHE_OUTPUT/test.sh"

        "$BRIOCHE_OUTPUT/test.sh" >> "$BRIOCHE_OUTPUT/test.txt"
      `),
    ],
    env: {
      BRIOCHE_OUTPUT: brioche.processTemplate(brioche.outputPath),
      PATH: brioche.processTemplate(brioche.stage2(), "/bin"),
      MAGIC: brioche.processTemplate(brioche.stage2(), "/usr/share/misc/magic"),
      test_script: brioche.processTemplate(`#!/usr/bin/env bash
        set -euo pipefail

        strings --version
        gcc --version
        m4 --version
        bash --version
        ls --version
        diff --version
        file --version
        file /usr/bin/env
        find --version
        gawk --version
        grep --version
        gzip --version
        make --version
        patch --version
        sed --version
        tar --version
        xz --version
      `),
    }
  });
}
