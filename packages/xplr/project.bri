import * as std from "std";
import { cargoBuild } from "rust";

export const project = {
  name: "xplr",
  version: "0.21.9",
};

const source = Brioche.download(
  `https://github.com/sayanarijit/xplr/archive/refs/tags/v${project.version}.tar.gz`,
)
  .unarchive("tar", "gzip")
  .peel();

export default () => {
  return cargoBuild({
    source,
    runnable: "bin/xplr",
  });
};
