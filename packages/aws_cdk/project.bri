import * as std from "std";
import { npmInstallGlobal } from "nodejs";

export const project = {
  name: "aws_cdk",
  version: "2.150.0",
};

export default function () {
  const recipe = npmInstallGlobal({
    packageName: "aws-cdk",
    version: project.version,
  });

  return std.withRunnableLink(recipe, "bin/cdk");
}
