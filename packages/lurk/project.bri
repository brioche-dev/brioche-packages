import * as std from "std";
import { cargoBuild } from "rust";

export const project = {
  name: "lurk",
  version: "0.3.6",
};

const source = Brioche.download(
  `https://github.com/JakWai01/lurk/archive/refs/tags/v${project.version}.tar.gz`,
)
  .unarchive("tar", "gzip")
  .peel();

export default () => {
  return cargoBuild({
    source,
    runnable: "bin/lurk",
  });
};
