import * as std from "std";
import { cargoBuild } from "rust";

export const project = {
  name: "dust",
  version: "1.1.1",
};

const source = Brioche.download(
  `https://github.com/bootandy/dust/archive/refs/tags/v${project.version}.tar.gz`,
)
  .unarchive("tar", "gzip")
  .peel();

export default () => {
  return cargoBuild({
    source,
    runnable: "bin/dust",
  });
};
